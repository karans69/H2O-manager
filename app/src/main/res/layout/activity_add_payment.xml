<!--      android:id="@+id/numberPicker"-->
<!--      android:layout_width="30dp"-->
<!--      android:layout_height="50dp"-->
<!--      android:layout_gravity="center"-->
<!--      android:layout_marginEnd="3dp"-->
<!--      android:background="@android:color/transparent"-->
<!--      android:orientation="vertical"-->
<!--      android:textColor="@color/black"-->
<!--      app:layout_constraintBottom_toBottomOf="@+id/textView16"-->
<!--      app:layout_constraintEnd_toStartOf="@+id/textView18"-->
<!--      app:layout_constraintTop_toTopOf="@+id/textView16" />-->


  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/paidBtn"
      android:layout_width="110dp"
      android:layout_height="48dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/paid_btn"
      android:text="Paid"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/advBtn"
      android:layout_width="60dp"
      android:layout_height="48dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/advancebtn"
      android:text="Adv."
      app:layout_constraintEnd_toStartOf="@+id/pendingBtn"
      app:layout_constraintStart_toEndOf="@+id/paidBtn"
      app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/pendingBtn"
      android:layout_width="120dp"
      android:layout_height="48dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/pending_btn"
      android:text="Pending"
      app:layout_constraintBottom_toBottomOf="@+id/paidBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/paidBtn" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:fontFamily="@font/anta"
      android:text="@string/design_by_c_j"
      android:textAlignment="center"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>